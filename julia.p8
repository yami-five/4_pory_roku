pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
max_iter=16
-- s=1.05
cx=-1
cy=-1
stage=1
function julia(z1,z2)
    local z={z1,z2}
    local n=0
    while((z[1]*z[1]+z[2]*z[2])<=4 and n<max_iter) do
        tempZx=z[1]*z[1]-z[2]*z[2]+cx
        z[2]=z[1]*z[2]*2+cy
        z[1]=tempZx
        n+=1
    end
    return n
end

function _update()
    -- cx+=0.01
    if(flr(stage)==1)then
        cy+=0.05
    elseif(flr(stage)==2)then
        cy-=0.05
        cx+=0.05
    elseif(flr(stage)==3)then
        cx-=0.05
    end
    stage+=0.025
end

function _draw()
    cls()
    local rs = -1.75
    local re = 1.75
    local is = -1
    local ie = 1
    -- for i=-1,1,0.5 do
    --     for j=-1,1,0.5 do
    for i=1,128,1 do
        for j=1,64,1 do
            local z1=rs + (i*0.0078) * (re - rs)
            local z2=is + (j*0.0078) * (ie - is)
            n=julia(z1,z2)
            local color = 16-n
            pset(i,j,color)
            pset(i,128-j,color)
            -- print(j/128)
            -- print(c1.." "..c2.." "..n.." "..color.." "..i.." "..j)
        end
    end
end
